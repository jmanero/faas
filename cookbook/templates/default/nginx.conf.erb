## Local serivces
upstream faas {
  server localhost:9001;
  keepalive 16;
}

server {
  listen 80;
  server_name fucksasaservice.co localhost;

  ## Use HTTP/1.1 with a keep-alive pool for upstream connections
  proxy_http_version 1.1;

  location /nginx_status {
    stub_status on;
  }

  location / {
    proxy_pass http://faas/;
  }
}
